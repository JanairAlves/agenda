unit uControllerContato;

interface

uses
  uModelContato, uViewContato, System.Generics.Collections;

type
  TControllerContato = class
    private
      FModelContato: TModelContato;
    public
      constructor create;
      destructor destroy; override;
      procedure ValidarContato;
      function SalvarContato(aModelContato: TModelContato): boolean;
  end;

implementation

uses
  System.SysUtils;

{ TControllerContato }

constructor TControllerContato.create;
begin
  FModelContato := TModelContato.Create;
end;

destructor TControllerContato.destroy;
begin
  inherited;
  FreeAndNil(FModelContato);
end;

function SalvarContato(aModelContato: TModelContato): boolean;
begin
  result := false;
end;

procedure TControllerContato.ValidarContato;
begin
  try
    FModelContato.Nome := '';
  except
    on E: Exception do
      FViewContato.ExibirErro(E.Message);
  end;
end;

end.

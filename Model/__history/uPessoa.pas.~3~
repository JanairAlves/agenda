unit uPessoa;

interface

type
  TPessoa = class
    private
      FNome: string;
      FSobrenome: string;
      FApelido: string;
      FDataNascimento: TDate;
      FTipoRelacionamento: string;
      function GetNome: string;
      function GetApelido: string;
      function GetDataNascimento: TDate;
      function GetSobrenome: string;
      function GetTipoRelacionamento: string;
      procedure SetNome(const Value: string);
      procedure SetApelido(const Value: string);
      procedure SetDataNascimento(const Value: TDateTime);
      procedure SetSobrenome(const Value: string);
      procedure SetTipoRelacionamento(const Value: string);
    public
      property Nome: string read GetNome write SetNome;
      property Sobrenome: string read GetSobrenome write SetSobrenome;
      property Apelido: string read GetApelido write SetApelido;
      property DataNascimento: TDateTime read GetDataNascimento write SetDataNascimento;
      property TipoRelacionamento: string read GetTipoRelacionamento write SetTipoRelacionamento;
  end;

implementation

uses
  System.SysUtils;

{ TPessoa }

function TPessoa.GetApelido: string;
begin
  result := FApelido;
end;

function TPessoa.GetDataNascimento: TDateTime;
begin
  result := DateToStr(FDataNascimento);
end;

function TPessoa.GetNome: string;
begin
  result := FNome;
end;

function TPessoa.GetSobrenome: string;
begin
  result := FSobrenome;
end;

function TPessoa.GetTipoRelacionamento: string;
begin
  result := FTipoRelacionamento;
end;

procedure TPessoa.SetApelido(const Value: string);
begin
  FApelido := Value;
end;

procedure TPessoa.SetDataNascimento(const Value: TDateTime);
var
  data: TDateTime;
begin
  if not TryStrToDate(Value, data) then
    raise;

  FDataNascimento := data;
end;

procedure TPessoa.SetNome(const Value: string);
begin
  FNome := Value;
end;

procedure TPessoa.SetSobrenome(const Value: string);
begin
  FSobrenome := Value;
end;

procedure TPessoa.SetTipoRelacionamento(const Value: string);
begin
  FTipoRelacionamento := Value;
end;

end.
